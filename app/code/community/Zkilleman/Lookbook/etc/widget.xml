<widgets>
    <lookbook_slideshow type="lookbook/slideshow" translate="name description" module="lookbook">
        <name>Zkilleman Lookbook Slideshow</name>
        <description type="desc">Slide show for lookbook images</description>
        <parameters>
            <set_handle translate="label comment">
                <required>0</required>
                <visible>1</visible>
                <label>Set handle</label>
                <type>text</type>
            </set_handle>
            <tags translate="label comment">
                <required>0</required>
                <visible>1</visible>
                <label>Tags</label>
                <type>text</type>
            </tags>
        </parameters>
    </lookbook_slideshow>
</widgets>
