<config>
    <sections>
        <cms>
            <groups>
                <lookbook translate="label">
                    <label>Zkilleman Lookbook Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>200</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <allow_param_tags translate="label comment">
                            <label>Allow Tag Search</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[
                                Allows a user to filter images by providing request
                                parameter tags. This option might be overrided by
                                widget options.
                            ]]></comment>
                        </allow_param_tags>
                        <tags_param_name translate="label comment">
                            <label>Tags Request Parameter Name</label>
                            <frontend_type>text</frontend_type>
                            <validate>required-entry validate-alphanum</validate>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[
                                The query string key to be used for tag search. Only
                                applicable if "Allow Tag Search" is set to "Yes". Be
                                careful not to conflict with system keys.
                            ]]></comment>
                        </tags_param_name>
                        <max_param_tags translate="label comment">
                            <label>Tag Search Limit</label>
                            <frontend_type>text</frontend_type>
                            <validate>validate-digits</validate>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[
                                Maximum number of simultaneous user provided tags.
                                Only applicable if "Allow Tag Search" is set to
                                "Yes". Leave empty for no restriction.
                            ]]></comment>
                        </max_param_tags>
                        <param_tags_aggregator translate="label comment">
                            <label>Tag Search Aggregator</label>
                            <frontend_type>select</frontend_type>
                            <source_model>lookbook/config_source_aggregators</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[
                                Whether search should match on "All" or "Any" of the
                                requested tags. "All" is slower.
                            ]]></comment>
                        </param_tags_aggregator>
                    </fields>
                </lookbook>
            </groups>
        </cms>
    </sections>
</config>
